{
  "name": "backend",
  "version": "1.0.0",
  "description": "instclone backend",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index",
    "dev": "tsnd --respawn --transpile-only index",
    "build:ui": "rm -rf build && cd ../client && npm run build && cp -r build ../backend/build",
    "build": "tsc",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "test": "jest --verbose",
    "test-watch": "jest --watch",
    "test-watchAll": "jest --watchAll",
    "pretty": "prettier --write .",
    "type": "module",
    "debug": "ndb index.ts"
  },
  "author": "",
  "license": "ISC",
